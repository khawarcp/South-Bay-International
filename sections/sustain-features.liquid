<section class="icon-details-section">
    <div class="container">
        <div class="icon-details-main">
            <div class="icon-details-flex d-flex space-b flex-wrap">
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'item' %}
                            <div class="icon-details-single">
                                <div class="icon-details-icon">
                                    {% render 'image-snippet', image: block.settings.image %}
                                </div>
                                <div class="icon-details-info">
                                    <h5> {{ block.settings.heading }} </h5>
                                    <p> {{ block.settings.text }} </p>
                                </div>
                            </div>
                    {% endcase %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>


{% schema %}
    {
        "name": "Features",
        "settings": [
        ],
        "blocks": [
            {
                "name": "Item",
                "type": "item",
                "settings": [
                    {
                            "type": "text",
                            "id": "heading",
                            "label": "Heading",
                            "default": "One Tree Planted"
                        },
                        {
                            "type": "inline_richtext",
                            "id": "text",
                            "label": "Text",
                            "default": "We donate to One Tree Planted, a non-profit organization that restores damaged ecosystems and supports the water cycle by growing trees. The funds we give help plant approximately 4,000 trees annually!"
                        },
                        {
                            "type": "image_picker",
                            "id": "image",
                            "label": "Image"
                        }   
                ]
            }
        ],
        "presets": [
            {
                "name": "Features"
            }
        ]
    }
    {% endschema %}