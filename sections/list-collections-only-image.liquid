<section class="divider-section-image">
    <div class="divider-section desk-large" style="background-image: url({{ section.settings.bg_image_1 | image_url }});"> </div>
    <div class="divider-section desk-small" style="background-image: url({{ section.settings.bg_image_2 | image_url }});"> </div>
    <div class="divider-section tablet-data" style="background-image: url({{ section.settings.bg_image_3 | image_url }});"> </div>
    <div class="divider-section mobile-data" style="background-image: url({{ section.settings.bg_image_4 | image_url }});"> </div>
    {% unless section.settings.vector_position == 'none' %}    
        {% if section.settings.vector_position == 'left' %}
            <div class="bottom-vector-global d-flex">
                <img src="{{ 'bottom-vector.png'| asset_url }}" alt="bottom-vector">
            </div>
        {% endif %}    
        {% if section.settings.vector_position == 'right' %}
            <div class="bottom-vector-global bottom-vector-right d-flex">
                <img src="{{ 'bottom-right-vector.png'| asset_url }}" alt="bottom-right-vector">
            </div>
        {% endif %}    
    {% endunless %}
</section>

{% schema %}
{
    "name": "Collection Listing Image",
    "settings": [
             {
                "type": "image_picker",
                "id": "bg_image_1",
                "label": "Large Image"
            },
            {
                "type": "image_picker",
                "id": "bg_image_2",
                "label": "Desktop Image"
            },
            {
                "type": "image_picker",
                "id": "bg_image_3",
                "label": "Tab Image"
            },
            {
                "type": "image_picker",
                "id": "bg_image_4",
                "label": "Mobile Image"
            },
            {
                "type": "select",
                "id": "vector_position",
                "label": "Vector Image",
                "options": [
                    {
                        "value": "none",
                        "label": "None"
                    },
                    {
                        "value": "left",
                        "label": "Left"
                    },
                    {
                        "value": "right",
                        "label": "Right"
                    }
                ],
                "default": "none"
            }
    ],
    "presets": [
        {
            "name": "Collection Listing Image"
        }
    ]
}
{% endschema %}