<section class="home-partner section-padding rest-easy-section">
    <div class="flex-custom d-flex space-b flex-wrap">
        <div class="home-partner-child tab-hidden-images rest-easy-child">
            {% render 'image-snippet', image: section.settings.image %}
        </div>
        <div class="home-partner-child rest-easy-child">
            <div class="section-bar-partners"> </div>
            {% if section.settings.heading != blank %}
                <h2> {{ section.settings.heading }} </h2>                    
            {% endif %}
            <div class="home-partner-child desktop-hidden-images">
                {% render 'image-snippet', image: section.settings.image_1 %}
            </div>
            <!-- <img class="desktop-hidden-images" src="./assets/visuals/tab-image-1.png" alt="*"> -->
            {% if section.settings.text != blank %}
                <p> {{ section.settings.text }} </p>
            {% endif %}
        </div>
    </div>
    <div class="relation-mission-container">
        <div class="container">
            <div class="relation-flex d-flex space-b flex-wrap">
                {% for block in section.blocks %}
                    {% case block.type %}
                        {% when 'text_item' %}
                            <div class="relation-single">
                                <h2> {{ block.settings.heading }} </h2>
                                <p> {{ block.settings.text }} </p>
                                <div class="relation-single-list">
                                    {{ block.settings.features }}
                                </div>
                            </div>
                    {% endcase %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>


{% schema %}
    {
        "name": "Rest With Features",
        "settings": [
                {
                    "type": "html",
                    "id": "heading",
                    "label": "Heading",
                    "default": "<span>How We Rest Easy and </span> You Can Too"
                },
                {
                    "type": "inline_richtext",
                    "id": "text",
                    "label": "Text",
                    "default": "We’re in the business of rejuvenation and when it comes to the planet, that means designing and developing sleep products that are better for the environment. Here’s how we make our commitment to sustainability a reality."
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "image_picker",
                    "id": "image_1",
                    "label": "Image"
                }
            ],
            "blocks": [
                {
                    "type": "text_item",
                    "name": "Text Item",
                    "settings": [
                        {
                            "type": "text",
                            "id": "heading",
                            "label": "Heading",
                            "default": "Products"
                        },
                        {
                            "type": "inline_richtext",
                            "id": "text",
                            "label": "Text",
                            "default": "Our patented designs increase product durability and create less waste."
                        },
                        {
                            "type": "html",
                            "id": "features",
                            "label": "Features"
                        }
                    ]
                }
            ],    
        "presets": [
            {
                "name": "Rest With Features"
            }
        ]
    }
    {% endschema %}